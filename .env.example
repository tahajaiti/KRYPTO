# ============================================
# KRYPTO - Environment Variables
# ============================================
# This file only contains Docker-level variables.
# All service configuration is in config-repo/ folder.
# All secrets are in Vault.
# ============================================

# Vault token (used by config server to fetch secrets)
VAULT_TOKEN=root

# ============================================
# External Port Mappings (host:container)
# ============================================

POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
RABBITMQ_EXTERNAL_PORT=5672
RABBITMQ_UI_EXTERNAL_PORT=15672
VAULT_EXTERNAL_PORT=8200
EUREKA_EXTERNAL_PORT=8761
CONFIG_EXTERNAL_PORT=8888
GATEWAY_EXTERNAL_PORT=8080

# ============================================
# Infrastructure Container Setup
# ============================================
# These are used by the container entrypoints, not Spring

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_DB=krypto

# RabbitMQ
RABBITMQ_DEFAULT_USER=kyojin
RABBITMQ_DEFAULT_PASS=kyojin

# ============================================
# Image tagging
# ============================================
 TAG=0.1
